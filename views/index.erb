<head>
  <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<h1>To Do List</h1>

<table>

  <tr>
    <th>Task Number</th>
    <th>Task Name</th>
    <th>Description</th>
    <th>Completed Date</th>
  </tr>

  <% @all_tasks.each_with_index do |task, index| %>
    <tr class="rows">
      <td><%= index + 1 %></td>
      <td><%= task[1] %></td>
      <td><%= task[2] %></td>
      <td><%= task[3] %></td>
    </tr>
  <% end %>

</table>

<a href="add_task">Add a Task!</a>
