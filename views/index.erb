<head>
  <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<h1>To Do List</h1>
<a href="add_task">Add a Task!</a>

<table>

  <tr>
    <th>Task Number</th>
    <th>Task Name</th>
    <th>Description</th>
    <th>Complete By</th>
    <th>Complete</th>
    <th>Completed Date</th>
  </tr>

  <% @all_tasks.each_with_index do |task, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= task[1] %></td>
      <td><%= task[2] %></td>
      <td><%= task[3] %></td>
      <td>
        <% if task[4] == "" %>
          <form class="" action="" method="post">
            <label><input type="text" name="completed_date" value="mm/dd/yy" id="completed_date" style="width: 75px;"></label>
            <input type="hidden" name="id" value="<%= index + 1 %>">
            <input type="submit" value="Add completed date">
          </form>
        <% else %>
            <%= "complete" %>
        <% end %>
      </td>
      <td><%= task[4] %></td>

    </tr>
  <% end %>

</table>
